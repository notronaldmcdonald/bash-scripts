# fpkgr install
if [ -e ~/.fpkgr ]; then
  echo "nothing" > /dev/null
else
  mkdir ~/.fpkgr
fi
fpkgr=false # switch - change to 'true' to install the foundation packager when a script runs.
if [ "$fpkgr" = "true" ]; then
  echo "${C208}nothing${RESET}" > /dev/null
  if [ ! -e ~/bash-scripts/foundation/fpkgr/exfpkgr ]; then
    echo "${C9}The Foundation Packaging Tool is not installed.${RESET}"
  read -p "${C14}Install? [y/N]${RESET} " install_fpkgr
    if [ "$install_fpkgr" = "true" ]; then
      echo "${C11}Installing now...${RESET}"
      curl https://raw.githubusercontent.com/notronaldmcdonald/bash-scripts/master/foundation/fpkgr/exfpkgr -o ~/.fpkgr/fpkgr
      echo "${C10}Placed in ~/.fpkgr${RESET}"
    else
      echo "${C11}Cancelled.${RESET}"
    fi
  else
    echo "nothing" > /dev/null
  fi
else
  echo "nothing" > /dev/null
fi
